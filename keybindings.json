// Place your key bindings in this file to override the defaults
[
  // explorer
  {
    "key": "ctrl+abnt_c1",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "command": "explorer.newFile",
    "key": "a",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "f",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.openToSide",
    "key": "s",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.copy",
    "key": "c",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.cut",
    "key": "x",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.paste",
    "key": "p",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "moveFileToTrash",
    "key": "d",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "copyFilePath",
    "key": "g y",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // Coding
  {
    "key": "ctrl+n",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && editorTextFocus"
  },
  {
    "key": "ctrl+oem_7",
    "command": "code-runner.run"
  },
  {
    "key": "space c f",
    "command": "editor.action.formatDocument",
    "when": "editorHasCodeActionsProvider && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space m p",
    "command": "markdown.showPreview",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space m s",
    "command": "markdown.showPreviewToSide",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space g l",
    "command": "workbench.action.gotoLine",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g i",
    "command": "editor.action.goToImplementation",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g r",
    "command": "editor.action.referenceSearch.trigger",
    "when": "vim.mode == 'Normal' && editorHasReferenceProvider && editorTextFocus"
  },
  {
    "key": "space abnt_c1",
    "command": "actions.find",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space f n",
    "command": "workbench.action.files.newUntitledFile",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space w s",
    "command": "workbench.action.splitEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+shift+up",
    "command": "editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+down",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+oem_5",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  // Navigation
  {
    "command": "workbench.action.quickOpen",
    "key": "space space",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.gotoSymbol",
    "key": "space b s",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space b q",
    "command": "workbench.action.quickOpenView",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "workbench.action.closeOtherEditors",
    "key": "space b o",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space b w",
    "command": "workbench.action.closeEditorsInGroup",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "vim.mode != 'Insert' && !inDebugRepl && !terminalFocus && editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "vim.mode != 'Insert' && !inDebugRepl && !terminalFocus && editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "vim.mode != 'Insert' && !inDebugRepl && !terminalFocus && editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "vim.mode != 'Insert' && !inDebugRepl && !terminalFocus && editorTextFocus"
  },
  // Harpoon
  {
    "key": "space a",
    "command": "vscode-harpoon.addEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space h m",
    "command": "vscode-harpoon.editEditors",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+1",
    "command": "vscode-harpoon.gotoEditor1",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+2",
    "command": "vscode-harpoon.gotoEditor2",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+3",
    "command": "vscode-harpoon.gotoEditor3",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+4",
    "command": "vscode-harpoon.gotoEditor4",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+5",
    "command": "vscode-harpoon.gotoEditor5",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+6",
    "command": "vscode-harpoon.gotoEditor6",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+7",
    "command": "vscode-harpoon.gotoEditor7",
    "when": " vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+8",
    "command": "vscode-harpoon.gotoEditor8",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+9",
    "command": "vscode-harpoon.gotoEditor9",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  }
]
